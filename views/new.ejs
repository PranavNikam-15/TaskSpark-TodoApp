<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>TaskSpark - Add Task</title>

  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/css/bootstrap.min.css" />
  <link rel="stylesheet" href="/css/style.css">

</head>

<body class="d-flex flex-column" style="min-height: 100vh;">

  <%- include('partials/header.ejs') %>

  <!-- Main Content -->
  <main class="flex-grow-1 container my-5">
    <div class="jumbotron p-4 rounded">

      <div class="row align-items-center">

        <!-- Logo -->
        <div class="col-md-5 text-center mb-4 mb-md-0">
          <img src="/imgs/TodoLogo___.png" alt="TaskSpark Logo" class="logo-img rounded-circle">
        </div>

        <!-- Task Form -->
        <div class="col-md-7">
          <h3 class="text-center mb-4 font-weight-bold text-dark">Add New Task</h3>

          <form action="/tasks" method="POST">
            <div class="form-group">
              <label for="title" class="font-weight-bold">Task Title</label>
              <input type="text" class="form-control" id="title" name="title" placeholder="Enter task title" required>
            </div>

            <div class="form-group">
              <label for="description" class="font-weight-bold">Task Description</label>
              <textarea class="form-control" id="description" name="description" rows="3" placeholder="Enter task description" required></textarea>
            </div>

            <div class="form-group">
              <label for="start_date" class="font-weight-bold">Start Date</label>
              <input type="date" class="form-control" id="start_date" name="start_date" required>
            </div>

            <div class="form-group">
              <label for="due_date" class="font-weight-bold">Due Date</label>
              <input type="date" class="form-control" id="due_date" name="due_date" required>
            </div>

            <button type="submit" class="btn btn-dark btn-block font-weight-bold">
              Add Task
            </button>
          </form>
        </div>

      </div>
    </div>
  </main>

  <%- include('partials/footer.ejs') %>

  <!-- Bootstrap JS -->
  <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/js/bootstrap.min.js"></script>

</body>
</html>